<?xml version="1.0" ?>
<labwc_config>
	<keyboard>
		<default />
		<keybind key="W-l">
			<action name="Execute" command="gtklock" />
		</keybind>
		<keybind key="Super_L" onRelease="yes">
			<action name="Execute" command="~/.config/rofi/launchers/type-1/launcher.sh" />
		</keybind>
		<keybind key="A-w">
			<action name="Execute" command="foot" />
		</keybind>
		<keybind key="A-s">
			<action name="Execute" command="screenshot" />
		</keybind>
		<keybind key="A-q">
			<action name="Close" />
		</keybind>

		<!-- Unbind Alt+Up and Alt+Down so I can use them in VSC -->
		<keybind key="A-Up"></keybind>
		<keybind key="A-Down"></keybind>
	</keyboard>
	<theme>
		<name>GTK</name>
		<titlebar>
			<layout>:iconify,close</layout>
		</titlebar>
	</theme>
	<libinput>
		<device category="touchpad">
			<naturalScroll>yes</naturalScroll>
		</device>
	</libinput>
</labwc_config>
